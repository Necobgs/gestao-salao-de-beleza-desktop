{
  "name": "gestao-salao-de-beleza-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "description": "Sistema desktop de gest達o de sal達o de beleza",
  "author": "Emanuel Borges Albano e Gabriel Beck",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix renderer\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "npm run build --prefix renderer",
    "build:electron": "tsc electron/main.ts --outDir electron/dist --module commonjs --target es6",
    "dist": "npm run build:renderer && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gestao.salao.desktop",
    "productName": "Gest達o Sal達o",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "renderer/out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
