{
  "name": "gestao-salao-de-beleza-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "description": "Sistema desktop de gest達o de sal達o de beleza",
  "author": "Emanuel Borges Albano e Gabriel Beck",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix renderer\" \"wait-on http://localhost:3000 && npx electronmon electron/main.js\"",
    "build:renderer": "npm run build --prefix renderer",
    "build": "npm run build:renderer",
    "dist": "npm run build && electron-builder",
    "start": "electron electron/main.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electronmon": "^2.0.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gestao.salao.desktop",
    "productName": "Gest達o Sal達o",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "renderer/out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
